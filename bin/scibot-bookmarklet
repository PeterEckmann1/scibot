#!/usr/bin/env sh
export SCIBOT_SYNC=$(head -c 100 /dev/urandom | tr -dc 'a-zA-Z0-9')
echo $SCIBOT_SYNC
scibot-sync &
SYNC_PID=$!
gunicorn -b unix:/run/scibot-bookmarklet/socket --pid /run/scibot-bookmarklet/pid -n scibot-bookmarklet -w 4 -k gevent -t 600 --preload --log-level debug scibot.bookmarklet_server:app;
kill ${SYNC_PID}
#gunicorn -b localhost:5000 -n scibot -w 4 -k gevent -t 600 --log-level debug server:app
